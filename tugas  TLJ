    const list = document.getElementById('list');
    function render(items){
      list.innerHTML = '';
      items.forEach((item, idx) =>{
        const card = document.createElement('div'); card.className='card';
        const qmeta = document.createElement('div'); qmeta.className='q';
        const qleft = document.createElement('div');
        const qnum = document.createElement('div'); qnum.className='meta'; qnum.textContent = `Soal ${idx+1}`;
        const qtxt = document.createElement('div'); qtxt.className='question'; qtxt.textContent = item.q;
        const opts = document.createElement('div'); opts.className='options'; opts.innerHTML = item.opts.join(' | ');
        const btn = document.createElement('button'); btn.className='toggle'; btn.textContent = 'Tampilkan Jawaban';
        const ans = document.createElement('div'); ans.className='answer'; ans.textContent = `Jawaban: ${item.ans}`;

        btn.addEventListener('click', ()=>{
          card.classList.toggle('show');
          btn.textContent = card.classList.contains('show') ? 'Sembunyikan Jawaban' : 'Tampilkan Jawaban';
        });

        qleft.appendChild(qnum); qleft.appendChild(qtxt); qleft.appendChild(opts);
        qmeta.appendChild(qleft); qmeta.appendChild(btn);
        card.appendChild(qmeta); card.appendChild(ans);
        list.appendChild(card);
      })
    }

    render(data);

    document.getElementById('showAll').onclick = ()=>{
      document.querySelectorAll('.card').forEach(c=>{c.classList.add('show'); c.querySelector('.toggle').textContent='Sembunyikan Jawaban'})
    }
    document.getElementById('hideAll').onclick = ()=>{
      document.querySelectorAll('.card').forEach(c=>{c.classList.remove('show'); c.querySelector('.toggle').textContent='Tampilkan Jawaban'})
    }
    document.getElementById('print').onclick = ()=> window.print();

    document.getElementById('search').addEventListener('input', (e)=>{
      const v = e.target.value.toLowerCase().trim();
      if(!v) return render(data);
      const filtered = data.filter(d=> (d.q + ' ' + d.opts.join(' ')).toLowerCase().includes(v));
      render(filtered);
    });
  </script>
